<!-- Create Policy Section -->
<div id="create-policy-section" class="content-section">
    <div class="recent-policies">
        <div class="section-header">
            <i class="fas fa-form"></i>
            Policy Information
        </div>
        <div style="padding: 2rem;">
            <form id="createPolicyForm">
                 <input type="hidden" class="form-control" id="update" name="update" readonly>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="userGmail" class="form-label">User Gmail</label>
                        <input type="text" class="form-control" id="userGmail" name="userGmail" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="policyNumber" class="form-label">Policy Number</label>
                        <input type="text" class="form-control" id="policyNumber" name="policyNumber" required>
                    </div>
                    <div class="col-md-6">
                        <label for="holderName" class="form-label">Policy Holder Name</label>
                        <input type="text" class="form-control" id="holderName" name="holderName" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="agentName" class="form-label">Agent Name</label>
                        <input type="text" class="form-control" id="agentName" name="agentName" required>
                    </div>
                    <div class="col-md-6">
                        <label for="policyCompany" class="form-label">Policy Company</label>
                        <select class="form-select" id="policyCompany" name="policyCompany" required>
                            <option value="">Select Company</option>
                            <option value="ABC Insurance">ABC Insurance</option>
                            <option value="XYZ Life">XYZ Life</option>
                            <option value="Global Health">Global Health</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="createDate" class="form-label">Policy Create Date</label>
                        <input type="date" class="form-control" id="createDate" name="createDate" required>
                    </div>
                    <div class="col-md-6">
                        <label for="policyPremium" class="form-label">Policy Premium</label>
                        <input type="number" class="form-control" id="policyPremium" name="policyPremium" step="0.01"
                            required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="installmentFreq" class="form-label">Installment Frequency</label>
                        <select class="form-select" id="installmentFreq" name="installmentFreq" required>
                            <option value="">Select Frequency</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Quarterly">Quarterly</option>
                            <option value="Half-yearly">Half-yearly</option>
                            <option value="Yearly">Yearly</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="planTerm" class="form-label">Plan Term (Years)</label>
                        <input type="number" class="form-control" id="planTerm" name="planTerm" required>
                    </div>
                    <div class="col-md-4">
                        <label for="endDate" class="form-label">Policy End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" required>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label for="totalValue" class="form-label">Total Value of Policy</label>
                        <input type="hidden" class="form-control" id="totalValue" name="totalValue" step="0.01"
                            readonly>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg" onclick="handleCreatePolicy(event)">
                        <i class="fas fa-save me-2"></i>Save Policy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

